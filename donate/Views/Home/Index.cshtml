@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Donate</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">


</head>

<body>





    <!-- Carousel Start -->
    <div class="carousel">
        <div class="container-fluid">
            <div class="owl-carousel">
                <div class="carousel-item">
                    <div class="carousel-img">

                        <img src="img/slider-01.jpg" alt="Image">
                    </div>
                    <div class="carousel-text">
                        <h1>Donate What You Don't Need, Help Those in Need</h1>
                        <p>
                            Share the items you no longer use, and make a difference in someone's life<br>
                            It’s simple, it’s quick, and your contribution matters
                        </p>
                        <div class="carousel-btn">
                            <a class="btn btn-custom" asp-controller="Home" asp-action="Donate">Donate Now</a>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="carousel-img">
                        <img src="img/slider-2.jpg" alt="Image">
                    </div>
                    <div class="carousel-text">
                        <h1>Give Back, Make an Impact</h1>
                        <p>
                            Donate your unwanted items and create opportunities for others<br>
                            Every little thing counts. Let’s build a community of giving
                        </p>
                        <div class="carousel-btn">
                            <a class="btn btn-custom" asp-controller="Home" asp-action="Donate">Donate Now</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>





    <!-- About Start -->
    <div class="about">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="about-img" data-parallax="scroll" data-image-src="img/about.jpg"></div>
                </div>
                <div class="col-lg-6">
                    <div class="section-header">
                        <p>@Localizer["Learn About Us"]</p>
                        <h2>@Localizer["Donate non-profit Website"] </h2>
                    </div>
                    <div class="about-tab">
                        <ul class="nav nav-pills nav-justified">
                            <li class="nav-item">
                                <a class="nav-link active" data-toggle="pill" href="#tab-content-1">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="pill" href="#tab-content-2">Mission</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="pill" href="#tab-content-3">Vision</a>
                            </li>
                        </ul>

                        <div class="tab-content">
                            <div id="tab-content-1" class="container tab-pane active">
                                Welcome to Donate Website!
                                We are here to make donating the things you no longer need easier and faster. Our goal is to build a community of giving, where everyone can share items they no longer use and help them reach those who need them
                            </div>
                            <div id="tab-content-2" class="container tab-pane fade">
                                Our mission is to simplify the process of donating unused items and promote the spirit of giving among individuals. We aim to connect people who want to donate items they no longer need with those who need them, contributing to building a strong and connected community where everyone can make a real difference in the lives of others.
                            </div>
                            <div id="tab-content-3" class="container tab-pane fade">
                                Our vision is to become the leading platform trusted by individuals for sharing unused items, promoting values of sustainability and social solidarity. We aspire to create a global community where everyone can be part of solving social and economic issues through donations, making the world a better place for all.

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <!-- Service Start -->
    <div class="service">
        <div class="container">
            <div class="section-header text-center">
                <p>Why Us?</p>
                <h2>Our reward is the impact we make together, not profit</h2>
            </div>
            <div class="row">
                <div class="col-lg-4 col-md-6">
                    <div class="service-item">
                        <div class="service-icon">
                            <i class="fas fa-tshirt"></i>
                        </div>

                        <div class="service-text">
                            <h3>Clothes</h3>
                            <p>Used clothes that are no longer needed, including winter clothes, summer clothes, shoes, and children’s clothing.</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="service-item">
                        <div class="service-icon">
                            <i class="fas fa-bed"></i>
                        </div>
                        <div class="service-text">
                            <h3>Furniture</h3>
                            <p>Used furniture such as beds, sofas, tables, chairs, and cabinets that are no longer needed</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="service-item">
                        <div class="service-icon">
                            <i class="fas fa-phone"></i>
                        </div>
                        <div class="service-text">
                            <h3>Electronics</h3>
                            <p>Old phones, computers, tablets, televisions, and other electronic devices that could be useful to others.</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="service-item">
                        <div class="service-icon">
                            <i class="fas fa-child"></i>
                        </div>
                        <div class="service-text">
                            <h3>Toys</h3>
                            <p>Old toys for children, such as educational toys, recreational toys, or sports equipment.</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="service-item">
                        <div class="service-icon">
                            <i class="fas fa-book"></i>
                        </div>
                        <div class="service-text">
                            <h3>Books</h3>
                            <p>Old or unused books, whether educational, novels, or non-fiction.</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="service-item">
                        <div class="service-icon">
                            <i class="fas fa-glasses"></i>
                        </div>
                        <div class="service-text">
                            <h3>Personal items</h3>
                            <p>Items like bags, glasses, or other personal products that are no longer needed.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="section-header text-center">
        <h2>                                                      And Many....</h2>
    </div>

    <!-- Service End -->
    <!-- Facts Start -->
    <div class="facts" data-parallax="scroll" data-image-src="img/facts.jpg">
        <div class="container">
            <!-- Hadith Text -->
            <div class="row">
                <div class="col-12 text-center" style="padding-top: 20px;">
                    <p style="font-size: 20px; font-style: italic; color: white;">
                        عن أبي هريرة رضي الله عنه قال:
                        "قال رسول الله صلى الله عليه وسلم: ما نقصت صدقة من مال، وما زاد الله عبداً بعفوٍ إلا عزّاً، وما تواضع أحدٌ لله إلا رفعه الله."

                        <br> Narrated Abu Huraira (may Allah be pleased with him):
                        The Messenger of Allah (peace be upon him) said: "Charity does not decrease wealth, and no servant forgives except that Allah increases him in honor, and no one humbles himself for the sake of Allah except that Allah raises his status."

                    </p>
                </div>
            </div>





        </div>
    </div>
    </div>
    <!-- Facts End -->
    <!-- Team Start -->
    <div class="team">
        <div class="container">
            <div class="section-header">
                <p>Meet Our Team</p>
                <h2>Our Expert Team</h2>
            </div>
            <div class="row">
                <div class="col-lg-3 col-md-6">
                    <div class="team-item">
                        <div class="team-img">
                            <img src="img/team-2.jpg" alt="Team Image">
                        </div>
                        <div class="team-text">
                            <h2>x</h2>
                            <p>Project Manager</p>
                            <div class="team-social">
                                <a href="#"><i class="fab fa-facebook-f"></i></a>
                                <a href="#"><i class="fab fa-instagram"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="team-item">
                        <div class="team-img">
                            <img src="img/team-1.jpg" alt="Team Image">
                        </div>
                        <div class="team-text">
                            <h2>x</h2>
                            <p>Designer</p>
                            <div class="team-social">
                                <a href="#"><i class="fab fa-facebook-f"></i></a>
                                <a href="#"><i class="fab fa-instagram"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="team-item">
                        <div class="team-img">
                            <img src="img/team-3.jpg" alt="Team Image">
                        </div>
                        <div class="team-text">
                            <h2>x</h2>
                            <p>Lead Developer</p>
                            <div class="team-social">
                                <a href="#"><i class="fab fa-facebook-f"></i></a>
                                <a href="#"><i class="fab fa-instagram"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Team End -->










    <style>

        .footer .row img {
            width: 100%;
            height: auto;
            border-radius: 8px;
        }

    </style>





    <div id="loader" class="show">
        <div class="loader"></div>
    </div>
</body>
</html>
