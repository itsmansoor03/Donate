@model List<Category>
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>Donate</title>
        <meta content="width=device-width, initial-scale=1.0" name="viewport">
    
    </head>

    <body>

   
    <!-- Page Header Start -->
        <div class="page-header">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <h2>Service</h2>
                    </div>
                    
                </div>
            </div>
        </div>
        <!-- Page Header End -->





        <!-- Service Start -->
        <div class="service">
            <div class="container">
                <div class="section-header text-center">
                    <p>Why Us?</p>
                    <h2>Our reward is the impact we make together, not profit</h2>
                </div>
                <div class="row">
                  
                    @foreach(var item in Model)
                    {
                    if (item.Name == "Medical")
                        break;
                    <div class="col-lg-4 col-md-6">
                        <div class="service-item">
                            <div class="service-icon">
                                <i class="@item.CategoryIcon"></i>  <!-- أيقونة ملابس من FontAwesome -->
                            </div>

                            <div class="service-text">
                                <h3>@item.Name</h3>
                                <p>@item.Description</p>
                            </div>
                        </div>
                    </div>
                    }
                    
                </div>
            </div>
            
        </div>
        <div  class="section-header text-center">
            <h2>                                                      And Many....</h2>
            </div>

        <!-- Service End -->
        

     

    

        
        
        <!-- Pre Loader -->
        <div id="loader" class="show">
            <div class="loader"></div>
        </div>

       
        

<style>
    /* Footer Image Section */
.footer .row img {
    width: 100%;
    height: auto;
    border-radius: 8px;
}



</style>
    </body>
</html>
