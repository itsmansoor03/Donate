

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="lib/animate/animate.min.css" rel="stylesheet">
    <link href="css/style.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Quicksand', sans-serif;
            background-image: url('img/facts.jpg');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
        }

        .login-card {
            max-width: 400px;
            margin: 50px auto;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .login-card-header {
            background: #007bff;
            color: white;
            text-align: center;
            padding: 20px;
        }

        .login-card-body {
            padding: 30px;
            background: white;
        }

            .login-card-body .form-label {
                font-weight: 500;
            }

            .login-card-body .btn-primary {
                background-color: #007bff;
                border: none;
                transition: background-color 0.3s;
            }

                .login-card-body .btn-primary:hover {
                    background-color: #0056b3;
                }

        .login-card-footer {
            text-align: center;
            padding: 15px;
            background: #f8f9fa;
        }

            .login-card-footer a {
                color: #007bff;
                text-decoration: none;
            }

                .login-card-footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    

    <div class="container">
        <div class="login-card">
            <div class="login-card-header">
                <h3><i class="fas fa-user-circle"></i> Login</h3>
            </div>
            <div class="login-card-body">
                <form asp-action="Login" method="post">
                    @Html.AntiForgeryToken()
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">
                            @ViewBag.Error
                        </div>
                    }
                   

                    <div class="form-group">
                        <label for="UsernameOEmail" class="form-label">Username or Email</label>
                        <input name="UsernameOEmail" type="text" class="form-control" placeholder="Enter your Username/Email" required>
                    </div>
                    <div class="form-group">
                        <label for="password" class="form-label">Password</label>
                        <input name="password" type="password" class="form-control" placeholder="Enter your password" required>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Login</button>
                </form>
            </div>
            <div class="login-card-footer">
                <p>Don't have an account? <a href="/Home/Register">Register here</a>.</p>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.bundle.min.js"></script>
  

</body>
</html>
